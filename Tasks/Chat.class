package Tasks;

import Classes.Task;
import Classes.ClientContext;

import static org.powerbot.script.Random.nextBoolean;

/**
 * Created by Joseph18 on 12/4/2014.
 */
public class Chat extends Task<ClientContext> {

    public Chat(ClientContext ctx) {
        super(ctx);
    }

    @Override
    public boolean activate() {
        return ctx.chat.queryContinue();
    }

    @Override
    public void execute() {
        System.out.println("Clicking Continue");

        boolean random = nextBoolean();
        if(random){
            ctx.chat.clickContinue(true);
        } else {
            ctx.chat.clickContinue(false);
        }

    }

}
