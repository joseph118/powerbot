package Tasks;

import Classes.Methods;
import Classes.Task;
import Classes.ClientContext;
import org.powerbot.script.rt6.Npc;

/**
 * Created by Joseph18 on 12/5/2014.
 */
public class Talk extends Task<ClientContext> {
    private int npcID;
    private int healthPercentageThreshold;

    public Talk (ClientContext ctx, int npcID, int healthPercentageThreshold){
        super(ctx);
        this.npcID = npcID;
        this.healthPercentageThreshold = healthPercentageThreshold;
    }

    @Override
    public boolean activate() {
        return  ctx.getHealth() < healthPercentageThreshold
                && !ctx.chat.queryContinue()
                && ctx.chat.get().isEmpty()
                && ctx.combatBar.targetName() == ""
                && !ctx.players.local().inMotion();
    }

    @Override
    public void execute() {
        Npc npc = ctx.npcs.select().select(Methods.nonCombatFilter).id(npcID).nearest().poll();
        if (npc.inViewport()) {
            System.out.println("Talking to NPC");
            npc.interact("Talk-to");
        } else {
            System.out.println("Walking to NPC");
            ctx.camera.turnTo(npc);
            ctx.movement.step(npc);
        }
    }

}
